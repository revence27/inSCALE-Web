- flash[:flashy]  = true
- if flash[:error] then
  .error
    = flash[:error]

= form_tag auth_path(:who => :stat) do
  .jarring Bio-Statistics Portal
  = field_set_tag do
    Select your name:
    %br/
    %select{:name => 'stat'}
      - @statmen.each do |statman|
        %option{:value => statman.id}
          = statman.name
  = field_set_tag do
    Password:
    %br/
    = password_field_tag :password
  = submit_tag 'Enter'

%hr/

= form_tag auth_path(:who => :client) do
  .jarring Phone Application Management
  = field_set_tag do
    Select the phone application:
    %br/
    %select{:name => 'client'}
      - @clients.each do |client|
        %option{:value => client.id}
          = client.name
  = field_set_tag do
    Password:
    %br/
    = password_field_tag :password
  = submit_tag 'Enter'
- proc do
  %hr/

  = form_tag auth_path(:who => :root) do
    .jarring Enter as <em>the</em> king of the system:
    = field_set_tag do
      Password:
      %br/
      = password_field_tag :password
    = submit_tag 'Enter'
