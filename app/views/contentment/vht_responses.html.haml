.jarring
  = @client.name
  Response Messages

%table
  %thead
    %tr
      %th Week
      %th{:colspan => 2} Case
      %th
    %tr
      %th
      %th No Children
      %th Many Children
      %th
  %tbody
    - @responses.each do |rsp|
      %tr
        %td
          = rsp.week
        %td
          = rsp.no_kids
          .charcount
            = rsp.no_kids.length
        %td
          = rsp.many_kids
          .charcount
            = rsp.many_kids.length
        %td
          %a{:href => response_change_path(:id => rsp.id)} Change
